<!DOCTYPE html>
<html>
<head>
  <title>Orlandoio</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body>
<!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Orlando.io", root_path, class: "navbar-brand"%>
        </div>
        <div class="navbar-collapse ">
          <ul class="nav navbar-nav">
            <li><%= link_to "Meetup", "#" %></li>
            <li><%= link_to "Groups", "#" %></li>
            <li><%= link_to "People", users_path %></li>
          </ul>

          <ul class= "nav navbar-nav navbar-right">
            <% if current_user %>
          <li id="fat-menu" class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", :data => { :toggle => "dropdown" }  do %>
              <%= current_user.full_name %><b class="caret"></b>
            <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_registration_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>
            <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">
      <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
    <div class="alert alert-warning alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= flash[:alert] %>
    </div>
    <% end %>
    </div>

    <%= yield :jumbotron %>
    <%= yield %>

     <hr>
     <div class="container">
      <footer>
        <p>&copy; Orlando Tech 2013</p>
      </footer>
    </div> <!-- /container -->

</body>
</html>
