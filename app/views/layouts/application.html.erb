<!DOCTYPE html>
<html>
<head>
  <title>Orlandoio</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body>
<!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Orlando.io", root_path, class: "navbar-brand"%>
        </div>
        <div class="navbar-collapse ">
          <ul class="nav navbar-nav">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Meetup", about_path %></li>
            <li><%= link_to "Groups", about_path %></li>
            <li><%= link_to "People", about_path %></li>
          </ul>
          <ul class= "nav navbar-nav navbar-right">
            <% if current_user %>
            <li><%= image_tag current_user.avatar.url(:mini), style: "padding-top: 10px" %></li>
            <li><%= link_to current_user.full_name, edit_user_registration_path %> </li>
            <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
            <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <% if notice %> 
   <div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
   </div>
    <% end %>

    <%= yield :jumbotron %>
    <%= yield %>

</body>
</html>
