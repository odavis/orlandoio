<div class="container">


<div class="form-signin" role="form">
  <h2 class="form-signin-heading">Sign in</h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= devise_error_messages! %>
  <div>
  <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "email@example.com" %>
  <%= f.password_field :password, :autofocus => true, class: "form-control", placeholder: "Password" %>
  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </label>
  <% end -%>
  <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
  
  <%= render "devise/shared/links" %>
  </div>
<% end %>




</div>
