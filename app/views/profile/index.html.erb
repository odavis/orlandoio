<div class="container">

  <h1>Orlando Tech <%= @users_count %> members strong
  <a href="https://twitter.com/share" class="twitter-share-button" data-lang="en" data-via="orlndotech" data-url="http://www.orlando.io" data-text="Join Orlando.io! Orlando's tech and startup community directory." data-hashtags="orlandotech,orlandoio">Tweet</a>
  </h1>

<form action="/profile/" method="get">
<option></option>
  <%= select_tag :tags, options_for_select(@tag_cloud, params[:tags]), :onchange => "this.form.submit();", data: { placeholder: "Search skills" }   %>
  <option></option>
</form>

<div class="row profile-list">
    <%  @users.each do |user| %>
      <div class="col-sm-6 col-md-4 col-xs-12">
        <h1><%= link_to user.full_name, profile_path(user) %></h1>
        <%= link_to (image_tag user.profile.avatar(:medium)),profile_path(user) , class: "img-responsive" %><br/>
        <h4><% user.profile.category %></h4>
      </div>
    <% end %>
    </div>
    <%= paginate @users %>
</div>

<script src="//platform.twitter.com/widgets.js"></script>


